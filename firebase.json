{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/ro",
        "destination": "/__ro.html"
      },
      {
        "source": "/ro/blog",
        "destination": "/__ro_blog.html"
      },
      {
        "source": "/ro/blog/post-2",
        "destination": "/__ro_blog_post-2.html"
      },
      {
        "source": "/ro/blog/reteta-de-supa-de-mazare",
        "destination": "/__ro_blog_reteta-de-supa-de-mazare.html"
      },
      {
        "source": "/blog",
        "destination": "/__blog.html"
      },
      {
        "source": "/blog/post-1",
        "destination": "/__blog_post-1.html"
      },
      {
        "source": "/blog/pea-soup-recipe",
        "destination": "/__blog_pea-soup-recipe.html"
      },
      {
        "source": "!/@(js|css|jpg|png|txt)/**",
        "destination": "/__index.html"
      }
    ]
  }
}
